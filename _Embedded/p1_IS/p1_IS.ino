//returns the avrage value of the array
float getAvrage(){
  float res = 0; 
  for(int a = 0; a < 10; a++){
    res += avrageLapTime[a];
  }
  res /= 10;
  return res;
}


void writeLED(){
    for(i = 0; i < 120; i++){
      for(j = 0; j < 16; j++){
        digitalWrite(SERIAL_PIN, imageArray[i][j]);
        digitalWrite(SHIFT_CLK_PIN, 1);//clock pulse
        digitalWrite(SHIFT_CLK_PIN, 0);
      }
      digitalWrite(STORE_CLK_PIN, 1);//clock pulse
      digitalWrite(STORE_CLK_PIN, 0);
      delayMicroseconds(1000);//waits until the next position
    }
}

